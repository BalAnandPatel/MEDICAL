@model TalkToTreat.Models.User
@{
    ViewBag.Title = "Register";
}

<section class="banner-area doctor-banner hospital">
    <div class="container">
        <div class="row ">
            <div class="col-md-6 text-left">
                <div class="banner-text">
                    <h3>My Profile</h3> 
                     
                </div>
            </div>
            <div class="col-md-6 text-left">
            </div>
        </div>
    </div>   
</section>

<section class="appoinment section">
    <div class="container"> 
        <div class="row"> 
            <div class="col-lg-12">
                <div class="appoinment-wrap mt-5 mt-lg-0 pl-lg-5">
                    <h2 class="mb-2 title-color">My Profile</h2>
                    <p class="mb-4">Mollitia dicta commodi est recusandae iste, natus eum asperiores corrupti qui velit . Iste dolorum atque similique praesentium soluta.</p>
                    @using (Html.BeginForm("UpdateProfile", "User", FormMethod.Post, new { id = "basicForm", @class = "form-horizontal", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <form id="#" class="appoinment-form" method="post" action="#">
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter Your Name", required = true })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter Your Name", required = true })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", placeholder = "Enter Your MobileNo", required = true })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.PatientAge, new { @class = "form-control", @type = "number", placeholder = "Enter PatientAge", required = true })
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-main btn-round-full">Update<i class="icofont-simple-right ml-2"></i></button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>