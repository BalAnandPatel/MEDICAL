@model TalkToTreat.Models.User

<div class="appoinment-content">
    <div class="mt-5 mt-lg-0 pl-lg-5 col-lg-12">
        <h2 class="mb-2 title-color">Update Health Issue</h2>
        @*<p class="mb-4">update patient health issue. </p>*@
        @using (Html.BeginForm("UpdatehealthCondition", "UserHealth", FormMethod.Post, new { id = "UpdateProfilebasicForm", @class = "form-horizontal", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", rows = "6", placeholder = "Enter health Issue", required = true })
                </div>
            </div>
        </div>
        <div class="col-12 mt-2">
            <div class="mt-2 mb-3">
                <button type="submit" class="btn btn-main btn-round-full">Update</button>
            </div>
        </div>
    }
    </div>
</div>
                     
