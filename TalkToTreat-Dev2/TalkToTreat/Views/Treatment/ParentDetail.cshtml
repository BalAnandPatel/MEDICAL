@using TalkToTreat.Models
@model TalkToTreat.Models.Treatment
@{
    ViewBag.Title = "Treatment";
    List<Treatment> Treatments = new List<Treatment>();
    Treatments = ViewBag.Treatments;
}
<section class="banner-area doctor-banner services-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <div class="banner-text">
                    <h3>@Model.Name</h3>
                    <h6> @Model.ShortDescription</h6>
                </div>
            </div>
            <div class="col-md-6 text-left">

            </div>
        </div>
    </div>
</section>

<section class="appoinment section" style="background: #F1F8FF;">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/Treatment">Treatment</a></li>
                @if (Model.Parent != null)
                {
                    <li class="breadcrumb-item"><a href="/Treatment/Detail/@Model.ParentId">@Model.Parent.Name</a></li>
                }
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-lg-3">
                @{ Html.RenderAction("VerticalMenu", "Treatment", new { id = Model.Id, parentId = Model.ParentId });}
            </div>
            <div class="col-lg-6">
                <div class="department-content">
                    <h3 class="text-md">@Model.Name</h3>
                    <div class="divider my-4"></div>    

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead">@Html.Raw(Model.Description)</p>
                    }
                    else
                    {
                        <p class="lead" style="font-size:18px;"> Coming soon</p>
                    }                    

                </div>
            </div>
            <div class="col-lg-3">              
                <img style="width:300px;" src="~/Assets/images/treatment/@Path.GetFileName(Model.Image)" />
            </div>
        </div>
    </div>
</section>


@{ Html.RenderAction("TreatmentPackages", "Treatment", new { treatment= Model.Name });}


<section class="banner-area doctor-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-9 text-left">
                <div class="appoinment-wrap mt-lg-0 pl-lg-5" style="border:1px solid #ccc;">
                    <h3><span class="text-dark-green">Get A Quote</span></h3>
                    <p style="color:coral;text-align:center"><b>@ViewBag.Invalid</b></p>
                    <div class="appointment-form" style="padding:5PX; background-color:white; ">
                        @Html.Partial("~/Views/Shared/_GetQuote.cshtml", new TalkToTreat.Models.Quote())
                    </div>
                </div>
            </div>
            <div class="col-md-3 text-left">
            </div>
        </div>
    </div>
</section>


