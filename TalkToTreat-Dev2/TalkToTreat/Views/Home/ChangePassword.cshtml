@model TalkToTreat.Models.ChangePassword
@{
    ViewBag.Title = "Change Password";
}
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script> 
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

<style>

    .field-validation-error {
        color:red;
    }

</style>

<section class="banner-area doctor-banner singhup-banner">
    <div class="container">
      
        <div class="row ">

            <div class="col-md-5 text-left">
                <div class="banner-text">
                    <h3>Change Password</h3>
                    <h2>We serve you with best quality hospitals</h2>

                    <p style="color:coral;text-align:center"><b>@ViewBag.ResetPasswordMessage</b></p>
                    <div class="appointment-form signin">
                        @using (Html.BeginForm())
                        {
                            <div class="row">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.HiddenFor(m=>m.UserId)
                                        @Html.TextBoxFor(m => m.Password, new { placeholder = "Enter Password", required = "True", value = "", @class = "form-control", maxlength = 50, type = "password", autocomplete = "off" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Enter Confirm Password", required = "True", value = "", @class = "form-control", maxlength = 50, type = "password", autocomplete = "off" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    </div>
                                </div>
                            </div>

                            <button id="SignIn" class="btn btn-success succes-btn">Change Password<i class="icofont-simple-right ml-2"></i></button>
                            <p class="already-register"> Don't have an account? <a class="" href="/Home/Register">Register <i class="icofont-simple-right ml-2"></i></a> </p>

                            <p class="already-register"> Already have an account? <a class="" href="/Home/Login">Login<i class="icofont-simple-right ml-2"></i></a> </p>
                        }

                    </div>

                </div>
            </div>


            <div class="col-md-6 text-left">

            </div> 
        </div> 
    </div>
</section>

